<form>
    <field>
        <id>option.description</id>
        <label>Description</label>
        <type>text</type>
    </field>
    <field>
        <id>option.subnet</id>
        <label>Subnet</label>
        <type>select_multiple</type>
        <help>Subnet this custom option belongs to</help>
    </field>
    <field>
        <id>option.code</id>
        <label>DHCP option</label>
        <type>text</type>
    </field>
    <field>
        <id>option.space</id>
        <label>Space</label>
        <type>dropdown</type>
    </field>
    <field>
        <id>option.type</id>
        <label>Type</label>
        <type>dropdown</type>
        <help><![CDATA[A <a rel="help" href="https://kea.readthedocs.io/en/latest/arm/dhcp4-srv.html#dhcp-types">DHCP option type</a>.]]></help>
    </field>
    <field>
        <id>option.array</id>
        <label>Array</label>
        <type>checkbox</type>
    </field>
    <field>
        <id>option.data</id>
        <label>Data</label>
        <type>text</type>
    </field>
</form>
